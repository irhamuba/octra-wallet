{
    "manifest_version": 3,
    "name": "UBA Wallet",
    "version": "1.0.0",
    "description": "Secure non-custodial wallet for Octra Network",
    "author": "UBA Dev",
    "homepage_url": "https://docs.octra.org",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "https://octra.network/*",
        "https://*.octra.network/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "UBA Wallet",
        "default_icon": "icons/icon-48.png"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'; base-uri 'self'; frame-ancestors 'none';"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}